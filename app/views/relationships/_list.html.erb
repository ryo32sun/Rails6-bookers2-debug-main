<% if users.any? %>
    <table class="table">
        <thead>
            <tr>
                <th>image</td>
                <th>name</td>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% users.each do |user| %>
                <tr>
                    <td>
                       <%= image_tag user.get_profile_image, size: '50x50' %> 
                    </td>
                    <td><%= user.name %></td>
                    <td>フォロー数：<%= user.followes.count %></td>
                    <td>フォロワー数：<%= user.followers.count %></td>
                    <td><%= link_to "Show" , user_path(user.id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>ユーザーはいません</p>
<% end %>